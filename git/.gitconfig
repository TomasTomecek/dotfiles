[user]
    name = Tomas Tomecek
    email = ttomecek@redhat.com
    signingkey = CE74F827
[color]
    ui = auto
[core]
    editor = vim
    ignorecase = false
    excludesfile = ~/.gitign
[alias]
    co = checkout
    br = branch
    a = add
    d = diff
    r = reset
    s = stash
[pull]
    rebase = true
[push]
    default = current
    followTags = true
[diff]
    tool = vimdiff
[difftool]
    prompt = false
[tig "bind"]
    status = C !git commit --verbose
    main = R !git rebase -i %(commit)^
[merge]
    tool = vimdiff
    conflictstyle = diff3
    prompt = false
[submodule]
    fetchJobs = 4
[commit]
    template = ~/.dotfiles/git/.git-template
[remote "origin"]
    # github, pagure
    fetch = +refs/pull/*/head:refs/remotes/origin/pr/*
    # gitlab
    fetch = +refs/merge-requests/*/head:refs/remotes/origin/mr/*
[remote "upstream"]
    # github, pagure
    fetch = +refs/pull/*/head:refs/remotes/upstream/pr/*
    # gitlab
    fetch = +refs/merge-requests/*/head:refs/remotes/upstream/mr/*
[rerere]
    enabled = true
[help]
    autocorrect = -42
[init]
	defaultBranch = main
